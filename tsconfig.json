{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@Api/*": ["src/api/*"],
      "@Bits/*": ["src/components/bits/*"],
      "@Blocks/*": ["src/components/blocks/*"],
      "@Elements/*": ["src/components/elements/*"],
      "@Functions/*": ["src/functions/*"],
      "@Layouts/*": ["src/layouts/*"],
      "@Pages/*": ["src/pages/*"],
      "@Components/*": ["src/components/*"]
    }
  },
  "include": ["src/**/*"]
}
