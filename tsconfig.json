{
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@Api/*": ["src/api/*"],
      "@Bits/*": ["src/components/bits/*"],
      "@Blocks/*": ["src/components/blocks/*"],
      "@Elements/*": ["src/components/elements/*"],
      "@Functions/*": ["src/functions/*"],
      "@Layouts/*": ["src/layouts/*"],
      "@Pages/*": ["src/pages/*"],
      "@Styles/*": ["src/styles/*"],
      "@Components/*": ["src/components/*"],
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*"]
}
