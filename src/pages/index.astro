---
import Base from '@Layouts/Base.astro'
import { map } from 'lodash-es'
const NAVIGATION = {
  Common: {
    Login: '/portal/login',
  },
  Backoffice: {
    Index: '/portal/',
  },
  Landing: {
    Public: '/dev/landing/public',
    Student: '/dev/landing/student',
    Instructor: '/dev/landing/instructor',
  },
}
---

<Base title="Development Navigation" bodyClass="dark:bg-white dark:text-black">
  <div class="flex flex-col items-stretch p-10">
    {map(NAVIGATION, (v, i) => (
      <div class="flex flex-col items-stretch">
        <h1 class="text-4xl font-bold py-5">{i}</h1>
        <ul>
          {map(v, (w, j) => (
            <li>
              <a
                href={w}
                class="text-xl text-blue-500 hover:text-red-500"
                target="_blank"
                // @ts-ignore
                set:html={`${j} --> ${w}`}
              ></a>
            </li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</Base>
