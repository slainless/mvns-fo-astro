---
import Home from '@Layouts/Home.astro'
import Heading from '@Elements/blog/Heading.tsx'
import Article from '@Elements/blog/Article.astro'
import Banner from '@Elements/blog/Banner.tsx'
import Sidebar from '@Elements/blog/Sidebar.tsx'
---

<Home title="Detail Blog">
  <div class="container px-12 mx-auto flex flex-row gap-16">
    <div class="flex flex-col gap-10 flex-grow">
      <Heading client:load />
      <Article />
      <Banner />
    </div>
    <Sidebar />
  </div>
</Home>

<style lang="styl" global>
  @import './white.styl';
</style>
