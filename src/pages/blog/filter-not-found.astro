---
import Home from '@Layouts/Home.astro'
import Notice from '@Elements/Notice.tsx'
import cntl from 'cntl'
---

<Home title="Detail Blog" forceWhite>
  <div
    class="px-12 mx-auto flex justify-center items-center h-screen -mt-header-sm sm:-mt-header"
  >
    <Notice
      img="/media/sparks/sad.png"
      title="Sorry!"
      subtitle="There is no article yet."
      subsubtitle="Maybe try another category?"
      styleOverrides={{
        title: cntl`text-6xl md:text-8xl md:text-left`,
        subtitle: cntl`text-xl`,
        subsubtitle: cntl`text-zinc-500 text-base`,
      }}
    />
  </div>
</Home>
