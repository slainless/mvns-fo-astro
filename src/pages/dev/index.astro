---
import Base from '@Layouts/Base.astro'
import { map } from 'lodash-es'
const NAVIGATION = {
  Landing: {
    Public: '/dev/landing/public',
    Student: '/dev/landing/student',
    Instructor: '/dev/landing/instructor',
  },
}
---

<Base title="Development Navigation" bodyClass="dark:bg-white dark:text-black">
  <div class="flex flex-col items-center p-10">
    {map(NAVIGATION, (v, i) => (
      <div class="flex flex-col items-center">
        <h1 class="text-4xl font-bold p-5">{i}</h1>
        <ul>
          {map(v, (w, j) => (
            <li>
              <a
                href={w}
                class="text-xl text-blue-500 hover:text-red-500"
                target="_blank"
              >
                {j}
              </a>
            </li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</Base>
