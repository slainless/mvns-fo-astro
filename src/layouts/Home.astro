---
import Base from './Base.astro'
import Header from './Header.astro'
import Footer from './Footer.tsx'
import Ads from '../components/blocks/Ads.tsx'
const { title } = Astro.props
---

<Base {title} class="mt-32">
  <slot name="head" slot="head" />
  <Header slot="pre-main" />
  <slot />
  <Ads
    slot="post-main"
    src="/image/footer-ad-placeholder.png"
    width={1197}
    height={250}
  />
  <Footer slot="post-main" />
</Base>
